<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.matrictime.network.dao.mapper.extend.KeyInfoMapper">
  <resultMap id="BaseResultMap" type="com.matrictime.network.dao.model.NmpKeyInfo">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="data_value" jdbcType="BIGINT" property="dataValue" />
    <result column="data_type" jdbcType="VARCHAR" property="dataType" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, data_value, data_type, create_time, update_time
  </sql>
  <select id="selectDataList" resultMap="BaseResultMap">
    select
      data_value, update_time
    from nmp_key_info
    where
        data_type = #{dataType,jdbcType=VARCHAR}
    and update_time &gt;= #{beginTime,jdbcType=TIMESTAMP}
    and update_time &lt; #{endTime,jdbcType=TIMESTAMP}
    order by update_time
  </select>

  <select id="getDataValueSum" resultType="bigDecimal">
    select
      COALESCE(SUM(data_value),0)
    from nmp_key_info
    where
      data_type = #{dataType,jdbcType=VARCHAR}
  </select>
</mapper>